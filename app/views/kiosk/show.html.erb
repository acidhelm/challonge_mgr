<% content_for :title, @tournament.name %>
<% refresh_tag = (@tournament.complete? || @tournament.finalizable?) ? "" :
                   "<meta http-equiv='refresh' content='#{@refresh_time}'>".html_safe %>
<% content_for :refresh_tag, refresh_tag %>
<% tbd = t(".tbd") %>

<h1 class="kioskname"><%= @tournament.name %></h1>
<table>
<tbody>
  <tr>
    <td class="kioskheader"><%= t(".current_match") %></td>
    <td>
      <% if @current_match.present? %>
        <span class="<%= @tournament.cabinet_color_invariant(:left, 'kioskcurrent') %>"><%= @current_match.team_name(:left) %></span><br>
        <span class="<%= @tournament.cabinet_color_invariant(:right, 'kioskcurrent') %>"><%= @current_match.team_name(:right) %></span>
      <% end %>
    </td>
  </tr>

  <tr>
    <td class="kioskheader"><%= t(".on_deck") %></td>
    <td>
      <% if @on_deck_match.present? %>
        <span class="<%= @tournament.cabinet_color_invariant(:left, 'kioskondeck') %>"><%= @on_deck_match.team_name(:left) || tbd %></span><br>
        <span class="<%= @tournament.cabinet_color_invariant(:right, 'kioskondeck') %>"><%= @on_deck_match.team_name(:right) || tbd %></span>
      <% end %>
    </td>
  </tr>

  <tr>
    <td class="kioskheader"><%= t(".in_the_hole") %></td>
    <td>
      <% if @in_the_hole_match.present? %>
        <span class="<%= @tournament.cabinet_color_invariant(:left, 'kioskinthehole') %>"><%= @in_the_hole_match.team_name(:left) || tbd %></span><br>
        <span class="<%= @tournament.cabinet_color_invariant(:right, 'kioskinthehole') %>"><%= @in_the_hole_match.team_name(:right) || tbd %></span>
      <% end %>
    </td>
  </tr>
</tbody>
</table>
