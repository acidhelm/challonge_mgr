<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prevented this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :api_key, "API key" %>
    <%= form.text_field :api_key, id: :user_api_key, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :subdomain, "Subdomain (leave this blank if you don't have one)" %>
    <%= form.text_field :subdomain %>
  </div>

  <div class="field">
    <%= form.label :password, "Password (leave this blank to keep your current password)" %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
